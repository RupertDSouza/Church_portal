<html>

<head>
    <title>Edit Priest Message</title>
    <link rel="stylesheet" href="/styles/style1.css" />
    <link rel="stylesheet" href="/styles/bootstrap1.min.css" />
</head>

<body>
    <%- include('../handlebars/navbar') %>

        <section class="main_content dashboard_part">

            <div class="container-fluid g-0">
                <div class="row">
                    <div class="col-lg-12 p-0">
                        <div class="header_iner d-flex justify-content-between align-items-center">
                            <%- include('../handlebars/mobileNav') %>
                                <div class="sidebar_icon d-lg-none">
                                    <i class="ti-menu"></i>
                                </div>
                                <div>
                                    <form action="/admin/editChurchInfo">
                                        <input type="submit" value="Update Church Info" class="btn btn-secondary btn-lg"
                                            id="updateChurchInfo">
                                    </form>
                                </div>
                                <div class="header_right d-flex justify-content-between align-items-center">
                                    <div class="profile_info">
                                        <img id="profileImage" src="" alt="Profile Image">
                                        <div class="profile_info_iner">
                                            <p id="role">Welcome!</p>
                                            <h5 id="name">User</h5>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Text fields -->
            <div class="main_content_iner" style="min-height: 0;">
                <div class="container-fluid plr_30 body_white_bg pt_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="white_box mb_30">
                                <div class="box_header">
                                    <div class="main-title">
                                        <h3 class="mb-0">Edit Priest Message</h3>
                                    </div>
                                </div>
                                <form id="editPriestMessageForm">
                                    <div class="mb-3">
                                        <label class="form-label" for="messageTitle">Message Title</label>
                                        <input type="text" class="form-control" id="messageTitle" name="messageTitle">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="messageDescription">Message</label>
                                        <textarea class="form-control" id="messageDescription" name="messageDescription"
                                            rows="8"></textarea>
                                    </div>

                                    <button type="button" class="btn btn-primary btn-lg"
                                        id="updateButton">Update</button>
                                    <a href="/admin/priestMessage" class="btn btn-secondary btn-lg"
                                        style="margin-left:8px;">Back</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Image -->
            <div class="main_content_iner">
                <div class="container-fluid plr_30 body_white_bg pt_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="white_box mb_30">
                                <div class="box_header">
                                    <div class="main-title">
                                        <h3 class="mb-0">Update Priest Image</h3>
                                    </div>
                                </div>
                                <div id="currentImageWrapper" style="margin-bottom:12px; display:none;">
                                    <p class="form-label">Current Image</p>
                                    <img id="currentImage" src="" alt="Current Priest Image"
                                        style="max-height:180px; border-radius:8px;">
                                </div>
                                <form>
                                    <div class="input-group mb-3">
                                        <input type="file" class="form-control" id="image" accept="image/*">
                                        <label class="input-group-text" for="image">Upload</label>
                                    </div>
                                    <button type="button" class="btn btn-primary btn-lg" id="updateImage">Update
                                        Image</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>
<script src="/js/auth.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const token = localStorage.getItem('token');
        const priestMessageId = localStorage.getItem('priestMessageId');

        checkAuthAndFetchUserData((error, userData) => {
            if (error) { console.error('Authentication failed'); return; }
            document.getElementById('profileImage').src = userData.image || "";
            document.getElementById('name').textContent = userData.name;
            document.getElementById('role').textContent = `Welcome ${userData.role}!`;

            if (priestMessageId) {
                fetch(`/app/priestMessage/read/${priestMessageId}`)
                    .then(res => res.json())
                    .then(data => {
                        document.getElementById('messageTitle').value = data.messageTitle || '';
                        document.getElementById('messageDescription').value = data.messageDescription || '';
                        if (data.image) {
                            document.getElementById('currentImage').src = data.image;
                            document.getElementById('currentImageWrapper').style.display = 'block';
                        }
                    })
                    .catch(err => console.error('Error fetching priest message:', err));
            }
        });

        // Update text fields
        document.getElementById('updateButton').addEventListener('click', () => {
            const updatedData = {
                messageTitle: document.getElementById('messageTitle').value,
                messageDescription: document.getElementById('messageDescription').value,
            };

            fetch(`/app/priestMessage/update/${priestMessageId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(updatedData)
            })
                .then(res => res.json())
                .then(data => {
                    if (data.message === 'Success') {
                        alert('Priest message updated successfully!');
                        window.location.href = '/admin/priestMessage';
                    } else {
                        alert('Failed to update message: ' + (data.message || ''));
                    }
                })
                .catch(err => console.error('Error updating priest message:', err));
        });

        // Update image
        document.getElementById('updateImage').addEventListener('click', () => {
            const imageInput = document.getElementById('image');
            if (imageInput.files.length === 0) {
                alert('Please select an image to upload.');
                return;
            }

            const formData = new FormData();
            formData.append('image', imageInput.files[0]);

            fetch(`/app/priestMessage/updateImage/${priestMessageId}`, {
                method: 'PUT',
                headers: { 'Authorization': `Bearer ${token}` },
                body: formData
            })
                .then(res => res.json())
                .then(data => {
                    if (data.message === 'Success') {
                        alert('Image updated successfully!');
                        window.location.href = '/admin/priestMessage';
                    } else {
                        alert('Failed to update image.');
                    }
                })
                .catch(err => console.error('Error updating image:', err));
        });
    });
</script>

</html>