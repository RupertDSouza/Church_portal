<html>

<head>
    <title>Edit News</title>

    <link rel="stylesheet" href="/styles/style1.css" />
    <link rel="stylesheet" href="/styles/bootstrap1.min.css" />


</head>

<body>
    <%- include('../handlebars/navbar') %>

        <section class="main_content dashboard_part">

            <div class="container-fluid g-0">
                <div class="row">
                    <div class="col-lg-12 p-0">
                        <div class="header_iner d-flex justify-content-between align-items-center">
                            <%- include('../handlebars/mobileNav') %>
                            <div class="sidebar_icon d-lg-none">
                                <i class="ti-menu"></i>
                            </div>
                            <div>

                                <form action="/admin/editChurchInfo">
                                    <input type="submit" value="Update Church Info" class="btn btn-secondary btn-lg" id="updateChurchInfo">
                                </form>
                            </div>

                            <div class="header_right d-flex justify-content-between align-items-center">

                                <div class="profile_info">
                                    <img id="profileImage" src="" alt="Profile Image">
                                    <div class="profile_info_iner">
                                        <p id="role">Welcome!</p>
                                        <h5 id="name">User</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main_content_iner " style="min-height: 0;">
                <div class="container-fluid plr_30 body_white_bg pt_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="white_box mb_30">
                                <div class="box_header ">
                                    <div class="main-title">
                                        <h3 class="mb-0">Edit News Details</h3>
                                    </div>
                                </div>
                                <form>
                                    <div class="mb-3">
                                        <label class="form-label" for="newsTitle">Title</label>
                                        <input type="text" class="form-control" id="newsTitle" name="newsTitle">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="content">Content</label>
                                        <textarea class="form-control" id="content" name="content" rows="3"></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="dates">Date </label>
                                        <input type="date" class="form-control" id="dates" name="dates">
                                    </div>

                                    <button type="button" class="btn btn-primary btn-lg"
                                        id="updateButton">Update</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main_content_iner ">
                <div class="container-fluid plr_30 body_white_bg pt_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="white_box mb_30">
                                <div class="box_header ">
                                    <div class="main-title">
                                        <h3 class="mb-0">Edit News Image</h3>
                                    </div>
                                </div>
                                <form>
                                    <div class="input-group mb-3">
                                        <input type="file" class="form-control" id="image">
                                        <label class="input-group-text" for="image">Upload</label>
                                    </div>
                                    <button type="button" class="btn btn-primary btn-lg"
                                        id="updateImage">Update</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>
<script src="/js/auth.js"></script>
<script>


    document.addEventListener('DOMContentLoaded', () => {
        const token = localStorage.getItem('token');
        const newsId = localStorage.getItem('newsId');
        checkAuthAndFetchUserData((error, userData) => {
            if (error) {
                console.error('Authentication failed');
                return;
            }
            document.getElementById('profileImage').src = getImagePath(userData.image);
            document.getElementById('name').textContent = userData.name;
            document.getElementById('role').textContent = `Welcome ${userData.role}!`;


            if (newsId) {
                fetch(`/app/news/read/${newsId}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('newsTitle').value = data.title;
                        document.getElementById('content').value = data.content;
                        document.getElementById('dates').value = formatDate(data.dates);
                    })
                    .catch(error => console.error('Error fetching news details:', error));
            }
        });
        document.getElementById('updateButton').addEventListener('click', () => {
            const updatedNews = {
                title: document.getElementById('newsTitle').value,
                content: document.getElementById('content').value,
                dates: document.getElementById('dates').value
            };

            fetch(`/app/news/update/${newsId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(updatedNews)
            })
                .then(response => response.json())
                .then(data => {

                    if (data.message === 'Success') {
                        alert('News updated successfully!');
                    } else {
                        alert('Failed to update news.');
                    }
                })
                .catch(error => console.error('Error updating news:', error));
        });

        document.getElementById('updateImage').addEventListener('click', () => {
            const imageInput = document.getElementById('image');
            if (imageInput.files.length === 0) {
                alert('Please select an image to upload.');
                return;
            }

            const formData = new FormData();
            formData.append('image', imageInput.files[0]);

            fetch(`/app/news/updateImage/${newsId}`, {
                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.message === 'Success') {
                        alert('News image updated successfully!');
                    } else {
                        alert('Failed to update news image.');
                    }
                })
                .catch(error => console.error('Error updating news image:', error));
        });
    });


    function getImagePath(image) {
        if (image) {

            return image;
        }
        return ""; // Return an empty string if the image is null or undefined
    }
    function formatDate(dateString) {
        const date = new Date(dateString);
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        return `${year}-${month}-${day}`;
    }

</script>

</html>