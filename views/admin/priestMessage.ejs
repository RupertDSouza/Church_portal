<html>

<head>
    <title>Priest Message</title>
    <link rel="stylesheet" href="/styles/style1.css" />
    <link rel="stylesheet" href="/styles/bootstrap1.min.css" />
</head>

<body class="crm_body_bg">

    <%- include('../handlebars/navbar') %>

        <section class="main_content dashboard_part">

            <div class="container-fluid g-0">
                <div class="row">
                    <div class="col-lg-12 p-0">
                        <div class="header_iner d-flex justify-content-between align-items-center">
                            <%- include('../handlebars/mobileNav') %>
                                <div class="sidebar_icon d-lg-none">
                                    <i class="ti-menu"></i>
                                </div>
                                <div>
                                    <form action="/admin/editChurchInfo">
                                        <input type="submit" value="Update Church Info" class="btn btn-secondary btn-lg"
                                            id="updateChurchInfo">
                                    </form>
                                </div>

                                <div class="header_right d-flex justify-content-between align-items-center">
                                    <div class="header_notification_warp d-flex align-items-center">
                                        <li>
                                            <a href="#" onclick="redirectToCreatePriestMessage()">
                                                <img src="../images/interface_16374941.png"
                                                    style="max-width:16%; margin-left:85%"> </a>
                                        </li>
                                    </div>
                                    <div class="profile_info">
                                        <img id="profileImage" src="" alt="Profile Image">
                                        <div class="profile_info_iner">
                                            <p id="role">Welcome!</p>
                                            <h5 id="name">User</h5>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main_content_iner">
                <div class="container-fluid plr_30 body_white_bg pt_30">
                    <div class="row justify-content-center" id="cards-container">
                        <!-- Cards will be inserted here dynamically -->
                    </div>
                </div>
            </div>

            <div id="response"></div>

            <!-- Delete Confirmation Modal -->
            <div id="confirmationModal" class="modal">
                <div class="modal-content">
                    <span class="close" id="closeModal">&times;</span>
                    <p>Are you sure you want to delete this message?</p>
                    <button id="confirmDelete" class="btn btn-primary" style="margin-bottom: 10;">Yes</button>
                    <button id="cancelDelete" class="btn btn-secondary">No</button>
                </div>
            </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>
<script src="/js/auth.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        checkAuthAndFetchUserData((error, userData) => {
            if (error) {
                console.error('Authentication failed');
                return;
            }
            document.getElementById('profileImage').src = getImagePath(userData.image);
            document.getElementById('name').textContent = userData.name;
            document.getElementById('role').textContent = `Welcome ${userData.role}!`;
        });
    });

    async function displayResults() {
        try {
            const response = await fetch("/app/priestMessage/read", {
                method: "GET",
            });

            if (!response.ok) {
                throw new Error("Network response was not ok " + response.statusText);
            }

            const result = await response.json();
            const cardsContainer = document.getElementById("cards-container");

            result.forEach(record => {
                const cardDiv = document.createElement("div");
                cardDiv.className = "col-lg-6";
                cardDiv.innerHTML = `
                <div class="white_box mb_30">
                    <div class="box_header">
                        <div class="main-title">
                            <h3 class="mb-0">${record.messageTitle}</h3>
                        </div>
                    </div>
                    <div class="card" style="width: 100%;">
                        ${record.image ? `<img src="${getImagePath(record.image)}" class="card-img-top" alt="Priest Message Image" style="max-height:200px; object-fit:cover;">` : ''}
                        <div class="card-body">
                            <p class="card-text">${record.messageDescription ? record.messageDescription.substring(0, 120) + '...' : ''}</p>
                            <a href="#" class="btn btn-primary edit-btn" data-id="${record._id}">Edit</a>
                            <a href="#" class="btn btn-danger delete-btn" data-id="${record._id}" style="margin-left:8px;">Delete</a>
                        </div>
                    </div>
                </div>`;
                cardsContainer.appendChild(cardDiv);
            });

            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault();
                    showConfirmationModal(this.getAttribute('data-id'));
                });
            });

            document.querySelectorAll('.edit-btn').forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault();
                    localStorage.setItem('priestMessageId', this.getAttribute('data-id'));
                    window.location.href = '/admin/editPriestMessage';
                });
            });

        } catch (error) {
            console.error("Error:", error);
            document.getElementById("response").innerText = "Error: " + error.message;
        }
    }

    function getImagePath(image) {
        return image || "";
    }

    function redirectToCreatePriestMessage() {
        window.location.href = '/admin/createPriestMessage';
    }

    function showConfirmationModal(cardId) {
        const modal = document.getElementById("confirmationModal");
        modal.style.display = "block";

        document.getElementById("confirmDelete").onclick = async function () {
            await deleteCard(cardId);
            modal.style.display = "none";
        };
        document.getElementById("closeModal").onclick = function () { modal.style.display = "none"; };
        document.getElementById("cancelDelete").onclick = function () { modal.style.display = "none"; };
    }

    async function deleteCard(cardId) {
        const token = localStorage.getItem('token');
        if (!token) { alert('Please login first'); return; }

        try {
            const response = await fetch(`/app/priestMessage/delete/${cardId}`, {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            if (!response.ok) throw new Error("Network response was not ok " + response.statusText);

            document.querySelector(`[data-id='${cardId}']`).closest('.col-lg-6').remove();
        } catch (error) {
            console.error("Error:", error);
            const el = document.getElementById("response");
            if (el) el.innerText = "Error: " + error.message;
        }
    }

    displayResults();
</script>

</html>