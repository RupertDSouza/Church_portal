<html>

<head>
    <title>Create Priest Message</title>
    <link rel="stylesheet" href="/styles/style1.css" />
    <link rel="stylesheet" href="/styles/bootstrap1.min.css" />
</head>

<body>
    <%- include('../handlebars/navbar') %>

        <section class="main_content dashboard_part">

            <div class="container-fluid g-0">
                <div class="row">
                    <div class="col-lg-12 p-0">
                        <div class="header_iner d-flex justify-content-between align-items-center">
                            <%- include('../handlebars/mobileNav') %>
                                <div class="sidebar_icon d-lg-none">
                                    <i class="ti-menu"></i>
                                </div>
                                <div>
                                    <form action="/admin/editChurchInfo">
                                        <input type="submit" value="Update Church Info" class="btn btn-secondary btn-lg"
                                            id="updateChurchInfo">
                                    </form>
                                </div>
                                <div class="header_right d-flex justify-content-between align-items-center">
                                    <div class="profile_info">
                                        <img id="profileImage" src="" alt="Profile Image">
                                        <div class="profile_info_iner">
                                            <p id="role">Welcome!</p>
                                            <h5 id="name">User</h5>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main_content_iner">
                <div class="container-fluid plr_30 body_white_bg pt_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="white_box mb_30">
                                <div class="box_header">
                                    <div class="main-title">
                                        <h3 class="mb-0">Create Priest Message</h3>
                                    </div>
                                </div>
                                <form id="createPriestMessageForm">
                                    <div class="mb-3">
                                        <label class="form-label" for="messageTitle">Message Title</label>
                                        <input type="text" class="form-control" id="messageTitle" name="messageTitle"
                                            placeholder="Enter the message title">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="messageDescription">Message</label>
                                        <textarea class="form-control" id="messageDescription" name="messageDescription"
                                            rows="6" placeholder="Write the priest's message here..."></textarea>
                                    </div>
                                    <label class="form-label" for="image">Priest Image (optional)</label>
                                    <div class="input-group mb-3">
                                        <input type="file" class="form-control" id="image" name="image"
                                            accept="image/*">
                                        <label class="input-group-text" for="image">Upload</label>
                                    </div>

                                    <button type="button" class="btn btn-primary btn-lg"
                                        id="createButton">Create</button>
                                    <a href="/admin/priestMessage" class="btn btn-secondary btn-lg"
                                        style="margin-left:8px;">Cancel</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>
<script src="/js/auth.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        checkAuthAndFetchUserData((error, userData) => {
            if (error) { console.error('Authentication failed'); return; }
            document.getElementById('profileImage').src = userData.image || "";
            document.getElementById('name').textContent = userData.name;
            document.getElementById('role').textContent = `Welcome ${userData.role}!`;
        });

        document.getElementById('createButton').addEventListener('click', createPriestMessage);
    });

    async function createPriestMessage() {
        const token = localStorage.getItem('token');
        if (!token) { alert('Please login first'); return; }

        const title = document.getElementById('messageTitle').value.trim();
        const desc = document.getElementById('messageDescription').value.trim();
        if (!title || !desc) { alert('Please fill in both title and message.'); return; }

        const form = document.getElementById('createPriestMessageForm');
        const formData = new FormData(form);

        try {
            const response = await fetch('/app/priestMessage/create', {
                method: 'POST',
                headers: { 'Authorization': `Bearer ${token}` },
                body: formData
            });

            const data = await response.json();

            if (data.message === 'Created Successfully') {
                alert('Priest message created successfully!');
                window.location.href = '/admin/priestMessage';
            } else {
                alert('Error creating message: ' + (data.message || 'Unknown error'));
            }
        } catch (error) {
            console.error('Error:', error);
            alert('An error occurred. Please try again.');
        }
    }
</script>

</html>