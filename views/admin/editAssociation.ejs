<html>

<head>
    <title>Edit Association</title>

    <link rel="stylesheet" href="/styles/style1.css" />
    <link rel="stylesheet" href="/styles/bootstrap1.min.css" />


</head>

<body>
    <%- include('../handlebars/navbar') %>

        <section class="main_content dashboard_part">

            <div class="container-fluid g-0">
                <div class="row">
                    <div class="col-lg-12 p-0">
                        <div class="header_iner d-flex justify-content-between align-items-center">
                            <div class="sidebar_icon d-lg-none">
                                <i class="ti-menu"></i>
                            </div>
                            <div>

                                <form action="#">
                                    <button type="button" class="btn btn-secondary btn-lg" id="updateCurchInfo">Update
                                        Church Info</button>
                                </form>
                            </div>

                            <div class="header_right d-flex justify-content-between align-items-center">

                                <div class="profile_info">
                                    <img id="profileImage" src="" alt="Profile Image">
                                    <div class="profile_info_iner">
                                        <p id="role">Welcome!</p>
                                        <h5 id="name">User</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main_content_iner " style="min-height: 0;">
                <div class="container-fluid plr_30 body_white_bg pt_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="white_box mb_30">
                                <div class="box_header ">
                                    <div class="main-title">
                                        <h3 class="mb-0">Edit Association Details</h3>
                                    </div>
                                </div>
                                <form>
                                    <div class="mb-3">
                                        <label class="form-label" for="associationName">Name</label>
                                        <input type="text" class="form-control" id="associationName"
                                            name="associationName">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="description">Description</label>
                                        <input type="text" class="form-control" id="description" name="description">
                                    </div>

                                    <button type="button" class="btn btn-primary btn-lg"
                                        id="updateButton">Update</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="main_content_iner ">
                <div class="container-fluid plr_30 body_white_bg pt_30">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="white_box mb_30">
                                <div class="box_header ">
                                    <div class="main-title">
                                        <h3 class="mb-0">Edit Association Image</h3>
                                    </div>
                                </div>
                                <form>
                                    <div class="input-group mb-3">
                                        <input type="file" class="form-control" id="image">
                                        <label class="input-group-text" for="image">Upload</label>
                                    </div>
                                    <button type="button" class="btn btn-primary btn-lg"
                                        id="updateImage">Update</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>
<script src="/js/auth.js"></script>
<script>


    document.addEventListener('DOMContentLoaded', () => {

        const token = localStorage.getItem('token');
        const associationId = localStorage.getItem('associationId');

        checkAuthAndFetchUserData((error, userData) => {
            if (error) {
                console.error('Authentication failed');
                return;
            }
            document.getElementById('profileImage').src = getImagePath(userData.image);
            document.getElementById('name').textContent = userData.name;
            document.getElementById('role').textContent = `Welcome ${userData.role}!`;


            if (associationId) {

                fetch(`/app/association/read/${associationId}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('associationName').value = data.name;
                        document.getElementById('description').value = data.description;
                    })
                    .catch(error => console.error('Error fetching association details:', error));
            }
        });
        document.getElementById('updateButton').addEventListener('click', () => {
            const updatedAssociation = {
                name: document.getElementById('associationName').value,
                description: document.getElementById('description').value,

            };

            fetch(`/app/association/update/${associationId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(updatedAssociation)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.message === 'Success') {
                        alert('Association updated successfully!');
                    } else {
                        alert('Failed to update association.');
                    }
                })
                .catch(error => console.error('Error updating association:', error));
        });

        document.getElementById('updateImage').addEventListener('click', () => {
            const imageInput = document.getElementById('image');
            if (imageInput.files.length === 0) {
                alert('Please select an image to upload.');
                return;
            }

            const formData = new FormData();
            formData.append('image', imageInput.files[0]);

            fetch(`/app/association/updateImage/${associationId}`, {
                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.message === 'Success') {
                        alert('Association image updated successfully!');
                    } else {
                        alert('Failed to update association image.');
                    }
                })
                .catch(error => console.error('Error updating association image:', error));
        });
    });


    function getImagePath(image) {
        if (image) {

            return image.replace("../../Church_portal/public/", "/");
        }
        return "";
    }


</script>

</html>