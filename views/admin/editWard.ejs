    <script>
      

      document.addEventListener('DOMContentLoaded', () => {
    const userId = localStorage.getItem('userId'); // Assuming you store the user ID in local storage
    const token = localStorage.getItem('token');
    const wardId = localStorage.getItem('wardId');
    
    if (!token) {
        window.location.href = '/admin/login.ejs';
    } 
        
    


           else if (wardId && userId) {
            fetch(`/app/user/read/${userId}`, {
            headers: {
                'Authorization': `Bearer ${token}`
            }
        })
        .then(response => response.json())
        .then(data => {
            document.getElementById('profileImage').src = getImagePath(data.avatar); // Assuming data.image contains the image URL
            document.getElementById('name').textContent = data.userName;
            
            document.getElementById('role').textContent = `Welcome ${data.role}!`;
        })
        .catch(error => console.error('Error fetching user details:', error));

                fetch(`/app/ward/read/${wardId}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('wardName').value = data.name;
                        document.getElementById('description').value = data.description;
                        document.getElementById('place').value = data.place;
                        document.getElementById('noOfFamilies').value = data.noOfFamilies;
                        document.getElementById('noOfMembers').value = data.noOfMembers;
                    })
                    .catch(error => console.error('Error fetching ward details:', error));
            }
            document.getElementById('updateButton').addEventListener('click', () => {
              console.log('update button clicked');
                const updatedWard = {
                    name: document.getElementById('name').value,
                    description: document.getElementById('description').value,
                    place: document.getElementById('place').value,
                    noOfFamilies: document.getElementById('noOfFamilies').value,
                    noOfMembers: document.getElementById('noOfMembers').value
                };

                fetch(`/app/ward/update/${wardId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}` // Include the token in the request headers
                },
                body: JSON.stringify(updatedWard)
            })
            .then(response => response.json())
            .then(data => {
            console.log('Server response:', data); // Log the server response
            if (data.message === 'Success') {
                alert('Ward updated successfully!');
            } else {
                alert('Failed to update ward.');
            }
        })
            .catch(error => console.error('Error updating ward:', error));
        });

        document.getElementById('updateImage').addEventListener('click', () => {
            const imageInput = document.getElementById('image');
            if (imageInput.files.length === 0) {
                alert('Please select an image to upload.');
                return;
            }

            const formData = new FormData();
            formData.append('image', imageInput.files[0]);

            fetch(`/app/ward/updateImage/${wardId}`, {
                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.message === 'Success') {
                    alert('Ward image updated successfully!');
                } else {
                    alert('Failed to update ward image.');
                }
            })
            .catch(error => console.error('Error updating ward image:', error));
        });
    });

    
    function getImagePath(image) {
    if (image) {
       
        return image.replace("../../Church_portal/public/", "/");
    }
    return ""; // Return an empty string if the image is null or undefined
}

